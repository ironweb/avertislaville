<div class="wrapper">
    <div id="st-accordion" class="st-accordion">
        <ul>
          <% @districts.each do |district| %>
            <li>
              <%= link_to (district.name + '<span class="st-arrow">Open or Close</span>').html_safe, districts_path(district) %>
              <div class="st-content">
                <ul>
                    <li class="nid">Nid de poule <span>XX</span></li>
                    <li class="lampadaire">Lampadaire <span>XX</span></li>
                    <li class="neige">Rue mal déneigée <span>XX</span></li>
                    <li class="trottoir">Troittoire à réparer <span>XX</span></li>
                </ul>
            </div>
            </li>
          <% end %>
        </ul>
    </div>
</div>
<script type="text/javascript">
    $(function() {
    
        $('#st-accordion').accordion({
            oneOpenedItem   : true
        });
        
    });
</script>